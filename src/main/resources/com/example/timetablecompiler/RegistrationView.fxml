<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<FlowPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.timetablecompiler.controllers.RegistrationViewController" orientation="VERTICAL" minWidth="400" minHeight="400" alignment="CENTER">
    <Label text="Регистрация"/>
    <Label fx:id="dataWrongLabel"/>
    <Label text="Логин"/>
    <TextField fx:id="loginField"/>
    <Label text="Пароль"/>
    <PasswordField fx:id="passwordField"/>
    <Button text="Зарегистрироваться" onAction="#clickToRegistry"/>
    <Label text="Уже есть аккаунт?"/>
    <Hyperlink text="Войти" onAction="#clickToLoginWindow"/>
    <Button onAction="#clickToQuit" text="Выйти из приложения"/>
</FlowPane>

